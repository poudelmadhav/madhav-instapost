// show more button
$("#my-posts").append("<%= escape_javascript render( @posts) %>");

// Hide link if it is last page otherwise update link
<% if @posts.total_pages == @posts.current_page %>
    $("#show_more_link").hide();
<% else %>
    $("#show_more_link").attr("href", "<%= posts_path(:page => (@posts.current_page + 1)) %>");
<% end %>
