<div class="navbar navbar-default header" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
      <span class="pull-left head-size logo">
        <%= link_to root_path do %>
          <i class="fa fa-instagram" aria-hidden="true"></i> | 
        <% end %>
        <strong><span class="brand"><%= link_to 'Instapost', root_path %></span></strong>
      </span>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to ' New Post', new_post_path, class: 'fa fa-pencil-square-o' %></li>
          <li><%= link_to "Timeline", timeline_path %></li>
          <% if !current_page?(user_path(current_user.id)) %>
            <li>
              <%= link_to user_path(current_user.id) do %>
                <% if current_user.photo? %>
                  <span class="header_pic_small">
                    <%= cl_image_tag current_user.photo, alt: current_user.name.split[0], title: current_user.name %>
                  </span>
                <% else %>
                  <<%= current_user.name.split[0] %>
                <% end %>
              <% end %>
              </li>
            <% else %>
              <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
            <% end %>
        <% else %>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Log In', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>      
</div>